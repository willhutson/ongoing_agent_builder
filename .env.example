# =============================================================================
# SpokeStack Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Anthropic API
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Claude model to use (default is Claude Opus 4.5)
CLAUDE_MODEL=claude-opus-4-5-20250514

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Option 1: Full DATABASE_URL (takes precedence)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Option 2: Individual components (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spokestack
DB_USER=spokestack
DB_PASSWORD=spokestack

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------
SERVICE_PORT=8000
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# ERP Integration (Optional)
# -----------------------------------------------------------------------------
ERP_API_BASE_URL=https://your-erp-instance.com/api
ERP_API_KEY=your-erp-api-key

# -----------------------------------------------------------------------------
# Multi-Tenant Limits
# -----------------------------------------------------------------------------
MAX_SKILLS_PER_INSTANCE=50
MAX_CLIENTS_PER_INSTANCE=100
DEFAULT_AGENT_TIMEOUT=300
