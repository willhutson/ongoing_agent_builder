# =============================================================================
# SpokeStack Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Anthropic API
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Claude model to use (default is Claude Opus 4.5)
CLAUDE_MODEL=claude-opus-4-5-20250514

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Option 1: Full DATABASE_URL (takes precedence)
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/database

# Option 2: Individual components (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spokestack
DB_USER=spokestack
DB_PASSWORD=spokestack

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------
SERVICE_PORT=8000
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# ERP Integration (erp_staging_lmtd)
# See: docs/JAN_2026_HANDOFF_ERP_INTEGRATION.md
# -----------------------------------------------------------------------------
ERP_API_BASE_URL=https://your-erp-instance.com/api
ERP_API_KEY=your-erp-api-key
# HMAC secret for callback signature verification (shared with ERP)
ERP_CALLBACK_SECRET=your-shared-secret-for-callbacks

# -----------------------------------------------------------------------------
# Multi-Tenant Limits
# -----------------------------------------------------------------------------
MAX_SKILLS_PER_INSTANCE=50
MAX_CLIENTS_PER_INSTANCE=100
DEFAULT_AGENT_TIMEOUT=300

# =============================================================================
# EXTERNAL LLM PROVIDERS (Optional - for Claude blindspots)
# =============================================================================
# These extend agent capabilities for video, image, voice, etc.
# Only configure the ones you need.

# -----------------------------------------------------------------------------
# Video Generation
# -----------------------------------------------------------------------------
# Higgsfield - Multi-model video generation (Sora 2, Veo 3.1, WAN, Kling, Minimax)
# Get key from: https://higgsfield.ai/dashboard
HIGGSFIELD_API_KEY=
HIGGSFIELD_BASE_URL=https://api.higgsfield.ai/v1

# Runway - Video editing, Gen-3 Alpha
# Get key from: https://app.runwayml.com/settings/api-keys
RUNWAY_API_KEY=

# -----------------------------------------------------------------------------
# Image Generation
# -----------------------------------------------------------------------------
# OpenAI - DALL-E 3, GPT-4V (vision), Whisper, TTS
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Replicate - Flux, SDXL, and other image models
# Get key from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=

# Stability AI - Stable Diffusion, image upscaling
# Get key from: https://platform.stability.ai/account/keys
STABILITY_API_KEY=

# -----------------------------------------------------------------------------
# Voice/Audio
# -----------------------------------------------------------------------------
# ElevenLabs - Voice synthesis, voice cloning
# Get key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=

# -----------------------------------------------------------------------------
# Presentations
# -----------------------------------------------------------------------------
# Beautiful.ai - AI presentation generation
BEAUTIFUL_AI_API_KEY=

# Gamma - AI presentation and document generation
GAMMA_API_KEY=

# -----------------------------------------------------------------------------
# Research
# -----------------------------------------------------------------------------
# Perplexity - Search-augmented AI research
# Get key from: https://perplexity.ai/settings/api
PERPLEXITY_API_KEY=
